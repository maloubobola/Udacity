<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thomasthiebaud.android.movie" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.example.thomasthiebaud.android.movie.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.thomasthiebaud.android.movie.activity.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="com.example.thomasthiebaud.android.movie.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.thomasthiebaud.android.movie.activity.MainActivity" />
        </activity>
        <activity
            android:name="com.example.thomasthiebaud.android.movie.activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.thomasthiebaud.android.movie.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.thomasthiebaud.android.movie.activity.MainActivity" />
        </activity>
    </application>

</manifest>
